<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C59CF"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Order Detail"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:text="Male"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextViewProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/editTextName"
        android:layout_marginTop="24dp"
        android:text="Female"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextViewProfile"
        android:layout_below="@+id/EditTextState"
        android:layout_marginTop="24dp"
        android:text="Household"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/EditTextState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextCity"
        android:layout_alignTop="@+id/TextViewProfile"
        android:layout_toLeftOf="@+id/TextView04"
        android:text="Blouse"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditTextState"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/TextView04"
        android:inputType="none"
        android:text="Formal Pants"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/EditTextCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TextView02"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/TextView04"
        android:layout_toRightOf="@+id/TextView02"
        android:text="BedSheets"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextViewEmail"
        android:layout_alignBottom="@+id/TextViewEmail"
        android:layout_alignParentRight="true"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/TextViewEmail"
        style="android:editTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextName"
        android:layout_alignLeft="@+id/editTextName"
        android:layout_marginLeft="10dp"
        android:text="Type"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/EditText04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_alignRight="@+id/TextView04"
        android:layout_alignTop="@+id/textView2"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textColor="#ffffff" >

    </EditText>

    <EditText
        android:id="@+id/EditText03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextViewProfile"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textColor="#ffffff" >

    </EditText>

    <EditText
        android:id="@+id/EditText05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView02"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="0"
        android:textColor="#ffffff" >

    </EditText>

    <Button
        android:id="@+id/place_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTextCity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="PLACE ORDER"
        android:textColor="#ffffff" />

</RelativeLayout>